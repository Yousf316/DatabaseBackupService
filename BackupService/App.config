<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<!-- SQL Server connection string (update with your server, DB, and auth method) -->
		<add key="SqlConnectionString" value="Server=.;Database=BusinessAnalystDB;Trusted_Connection=True;" />

		<!-- Folder path to store backup files -->
		<add key="BackupFolderPath" value="C:\DatabaseBackups" />

		<!-- Interval in minutes between backups -->
		<add key="BackupIntervalMinutes" value="3" />

		<!-- Folder path to store log files -->
		<add key="LogFolderPath" value="C:\ServiceLogs" />
	</appSettings>
</configuration>
